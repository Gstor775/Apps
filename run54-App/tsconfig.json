{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node16",
    "target": "es6",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [],
  "extends": "expo/tsconfig.base"
}
